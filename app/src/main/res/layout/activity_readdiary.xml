<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/read_back"
            android:layout_width="23dp"
            android:layout_height="26dp"
            android:background="@drawable/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阅读日记"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toStartOf="@+id/read_edit"
            app:layout_constraintStart_toEndOf="@+id/read_back"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/read_edit"
            android:layout_width="36dp"
            android:layout_height="30dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:text="编辑"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.47" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/read_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:ems="10"

        android:gravity="left|center_vertical"
        android:hint="标题"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColorHint="#727171"
        android:textSize="21sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_weight="0">


        <TextView
            android:id="@+id/read_time"
            android:layout_width="59dp"
            android:layout_height="19dp"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_weight="0"
            android:background="@drawable/biaoqian"
            android:paddingLeft="20dp"
            android:paddingRight="8dp"
            android:text="日期"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.021"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/read_mood"
            android:layout_width="63dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="0"
            android:background="@drawable/biaoqian"
            android:paddingLeft="20dp"
            android:text="心情"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/read_time"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/read_weather"
            android:layout_width="69dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="0"
            android:background="@drawable/biaoqian"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:text="天气"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/read_mood"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/read_weather_img"
            android:layout_width="19dp"
            android:layout_height="17dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:layout_weight="0"
            android:background="@drawable/bq_tianqi"
            app:layout_constraintBottom_toBottomOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="@+id/read_weather"
            app:layout_constraintTop_toTopOf="@+id/read_weather"
            app:srcCompat="@drawable/bq_tianqi" />

        <ImageView
            android:id="@+id/read_time_img"
            android:layout_width="13dp"
            android:layout_height="12dp"
            android:background="@drawable/bq"
            app:layout_constraintBottom_toBottomOf="@+id/read_time"
            app:layout_constraintEnd_toEndOf="@+id/read_time"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/read_time"
            app:layout_constraintTop_toTopOf="@+id/read_time"
            app:layout_constraintVertical_bias="0.625"
            app:srcCompat="@drawable/bq" />

        <ImageView
            android:id="@+id/read_mood_img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/bq_xingqing"
            app:layout_constraintBottom_toBottomOf="@+id/read_mood"
            app:layout_constraintEnd_toEndOf="@+id/read_mood"
            app:layout_constraintHorizontal_bias="0.041"
            app:layout_constraintStart_toStartOf="@+id/read_mood"
            app:layout_constraintTop_toTopOf="@+id/read_mood"
            app:layout_constraintVertical_bias="0.4"
            app:srcCompat="@drawable/bq_xingqing" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <jp.wasabeef.richeditor.RichEditor
        android:id="@+id/read_content"

        android:layout_width="300dp"
        android:layout_height="587dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/background_light"></jp.wasabeef.richeditor.RichEditor>


    <Button
        android:id="@+id/writeBut"
        android:layout_width="161dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="122dp"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="132dp"
        android:layout_marginRight="132dp"
        android:layout_marginBottom="391dp"
        android:text="记下笔记" />

    <Button
        android:id="@+id/button"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Button" />

</LinearLayout>